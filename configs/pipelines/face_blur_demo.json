{
  "name": "face_privacy_filter",
  "version": "1.0",
  "fps_limit": 30,
  "description": "Detects faces and blurs them for privacy.",
  "nodes": [
    {
      "id": "webcam",
      "type": "CameraSource",
      "params": {
        "id": "0",
        "width": "640",
        "height": "480",
        "format": "BGR"
      }
    },
    {
      "id": "face_detector",
      "type": "ObjectDetector",
      "params": {
        "model": "./models/yolov8n-face.engine",
        "target": "nv-trt",
        "conf_threshold": "0.5"
      }
    },
    {
      "id": "blur_filter",
      "type": "PrivacyNode",
      "params": {
        "blur_kernel": "15"
      }
    },
    {
      "id": "display",
      "type": "DisplaySink",
      "params": {
        "window_name": "xInfer Privacy Demo",
        "draw_boxes": "false"
      }
    }
  ],
  "edges": [
    { "from": "webcam", "to": "face_detector" },
    { "from": "face_detector", "to": "blur_filter" },
    { "from": "blur_filter", "to": "display" }
  ]
}